<div class='text-center'>

<h1> User Edit Page </h1>

<% if flash[:error] %>
    <% flash[:error].each do |k,v| %>
   <p style="color:red"> <%= "#{k}: #{v}." %> </p>
    <% end %>
<% end %>


<%= form_for @user do |f| %>
    <%= f.label :name, "Full Name:" %>
    <%= f.text_field :name %> <br>
    <%= f.label :age, "Age:" %>
    <%= f.text_field :age %> <br>
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %> <br>
    <%= f.label :password, "New Password:" %>
    <%= f.password_field :password %> <br>
    <%= f.label :password_confirmation, "Repeat New Password:" %>
    <%= f.password_field :password_confirmation %> <br>

    <%= f.submit "Confirm Edit User", {:class => "btn btn-outline-dark" } %>
  <% end %>
  <br>
  <%= button_to "Home", home_path, :class => "btn btn-dark", :method => "get" %>
  </div>