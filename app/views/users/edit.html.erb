<h1> Powder Mountain User Edit Page </h1>

<% if flash[:error] %>
    <% flash[:error].each do |k,v| %>
   <p style="color:red"> <%= "#{k}: #{v}." %> </p>
    <% end %>
<% end %>


<%= form_for @user do |f| %>
    <%= f.label :name, "Full Name:" %>
    <%= f.text_field :name %> <br>
    <%= f.label :age %>
    <%= f.text_field :age %> <br>
    <%= f.label :email %>
    <%= f.text_field :email %> <br>
    <%= f.label :password, "New Password:" %>
    <%= f.password_field :password %> <br>
    <%= f.label :password_confirmation, "Repeat New Password" %>
    <%= f.password_field :password_confirmation %> <br>

    <%= submit_tag("Confirm Edit User") %>
  <% end %>
  <br>
  <%= button_to "Home", home_path, :method => "get" %>